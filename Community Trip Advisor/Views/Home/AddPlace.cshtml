@model Community_Trip_Advisor.Models.Place

@{
    ViewData["Title"] = "AddPLace";
}

<h1>AddPlace</h1>
@using (Html.BeginForm("AddPlace", "Home", FormMethod.Post, new { enctype = "multipart/form-data"}))
{ 
<h4>Place</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPlace">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgPath" class="control-label"></label>
                <input type="file" name="ImageFile" />
                <span asp-validation-for="ImgPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgTitle" class="control-label"></label>
                <input asp-for="ImgTitle" class="form-control" />
                <span asp-validation-for="ImgTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}
<div>
    <a asp-action="ListPlaces">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
